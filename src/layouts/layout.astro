---
// 1. Tuodaan komponentti (Tämä oli aiemmin omassa lohkossaan)
import CookieConsent from '../components/CookieConsent.astro';

// 2. Määritellään propsit (Tämä oli aiemmin alemmassa lohkossa)
interface Props {
	title: string;
    description?: string;
}

const { title, description = "Ammattimainen valokuva ilman studiokäyntiä nettisivuille, someen tai työnhakuun." } = Astro.props;

// Estä .vercel.app -osoitteiden indeksointi hakukoneissa
const isVercelApp = Astro.url.hostname.endsWith('.vercel.app');
---

<!doctype html>
<html lang="fi">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		
		{/* Estä .vercel.app -osoitteiden indeksointi (duplicate content -suojaus) */}
		{isVercelApp && (
			<meta name="robots" content="noindex, nofollow" />
		)}
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="Gbkh1wMXAjMWWhD5W2LMCgVcuRzApym6E0KExSOn9gE" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
		<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
	</head>
	<body class="flex flex-col min-h-screen">
		<main class="flex-grow">
			<slot />
		</main>
		
		<footer class="bg-[#82bdbf] py-12">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{/* Vasen sarake */}
					<div>
						<p class="text-sm text-white">
							Olemme suomalainen toimija. Jos sinulla on kysyttävää, vastaamme mielellämme osoitteessa:  <a href="mailto:info@muotokuvasi.fi" class="text-white hover:text-gray-900 transition-colors">info@muotokuvasi.fi</a>
						</p>
					</div>

					
					
					{/* Oikea sarake */}
					<div class="flex flex-col md:items-end">
						<a href="/tietosuoja" class="text-sm text-white hover:text-gray-900 transition-colors leading-loose">
							Tietosuojaseloste ja käyttöehdot
							
						</a>
						<p class="text-sm text-white leading-loose">&copy; {new Date().getFullYear()} Muotokuvasi.fi / Y-tunnus: 1870949-9</p>
						
					</div>
				</div>
			</div>
		</footer>
		<CookieConsent />
	</body>
</html>