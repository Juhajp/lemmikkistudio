---
// 1. Tuodaan komponentti (Tämä oli aiemmin omassa lohkossaan)
import CookieConsent from '../components/CookieConsent.astro';

// 2. Määritellään propsit (Tämä oli aiemmin alemmassa lohkossa)
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fi">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="Gbkh1wMXAjMWWhD5W2LMCgVcuRzApym6E0KExSOn9gE" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<main class="flex-grow">
			<slot />
		</main>
		
		<footer class="bg-[#82bdbf] py-12">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{/* Vasen sarake */}
					<div>
						<p class="text-sm text-white">
							Asiakaspalvelu: <a href="mailto:info@muotokuvat.fi" class="text-white hover:text-gray-900 transition-colors">info@muotokuvat.fi</a>
						</p>
					</div>

					
					
					{/* Oikea sarake */}
					<div class="flex md:justify-end">
						<a href="/tietosuoja" class="text-sm text-white hover:text-gray-900 transition-colors leading-loose">
							Tietosuojaseloste<br>
							&copy; {new Date().getFullYear()} Muotokuvasi.fi 
						</a>
					</div>
				</div>
			</div>
		</footer>
		<CookieConsent />
	</body>
</html>