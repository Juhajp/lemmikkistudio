---
// 1. Tuodaan komponentti (Tämä oli aiemmin omassa lohkossaan)
import CookieConsent from '../components/CookieConsent.astro';

// 2. Määritellään propsit (Tämä oli aiemmin alemmassa lohkossa)
interface Props {
	title: string;
    description?: string;
}

const { title, description = "Ammattimainen valokuva ilman studiokäyntiä nettisivuille, someen tai työnhakuun." } = Astro.props;

// Estä .vercel.app -osoitteiden indeksointi hakukoneissa
const isVercelApp = Astro.url.hostname.endsWith('.vercel.app');
---

<!doctype html>
<html lang="fi">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		
		{/* Estä .vercel.app -osoitteiden indeksointi (duplicate content -suojaus) */}
		{isVercelApp && (
			<meta name="robots" content="noindex, nofollow" />
		)}
		
		{/* Open Graph / Facebook */}
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="" />
		<meta property="og:locale" content="fi_FI" />
		<meta property="og:site_name" content="lemmikkistudio.fi" />
		
		{/* Twitter Card */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={Astro.url.href} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="" />
		
		{/* Canonical URL */}
		<link rel="canonical" href={Astro.url.href} />
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="Gbkh1wMXAjMWWhD5W2LMCgVcuRzApym6E0KExSOn9gE" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Prata&family=Urbanist:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
		<title>{title}</title>
		<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
	</head>
	<body class="flex flex-col min-h-screen font-sans antialiased" style="font-family: 'Urbanist', sans-serif;">
		<header class="bg-[#001121] px-4 md:px-6 py-4 shrink-0">
			<div class="max-w-6xl mx-auto flex items-center justify-between gap-6">
				<a href="/" class="shrink-0" aria-label="Lemmikkistudio etusivu">
					<img src="/lemmikkistudio-logo.svg" alt="Lemmikkistudio" class="h-20 md:h-24 w-auto" />
				</a>
				<nav class="flex flex-wrap items-center justify-end gap-6 md:gap-8 text-white">
					<a href="/#luo-kuva" class="text-white text-xl font-medium hover:opacity-80 transition-opacity">Luo kuva</a>
					<a href="/#esimerkit" class="text-white text-xl font-medium hover:opacity-80 transition-opacity">Katso esimerkkejä</a>
					<a href="/#ukk" class="text-white text-xl font-medium hover:opacity-80 transition-opacity">Usein kysyttyä</a>
					<a href="/#yhteyttä" class="text-white text-xl font-medium hover:opacity-80 transition-opacity">Ota yhteyttä</a>
				</nav>
			</div>
		</header>
		<main class="flex-grow">
			<slot />
		</main>
		
		<footer id="yhteyttä" class="bg-[#000000] py-12">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{/* Vasen sarake */}
					<div>
						<p class="text-sm text-white mb-3">
							Olemme suomalainen toimija. Jos sinulla on kysyttävää, vastaamme mielellämme osoitteessa:  <a href="mailto:asiakaspalvelu@lemmikkistudio.fi" class="text-white hover:text-gray-900 transition-colors">asiakaspalvelu@lemmikkistudio.fi</a>
						</p>
					</div>

					
					
					{/* Oikea sarake */}
					<div class="flex flex-col md:items-end">
						<a href="/tietosuoja" class="text-sm text-white hover:text-gray-900 transition-colors leading-loose">
							Tietosuojaseloste ja käyttöehdot
							
						</a>
						<p class="text-sm text-white leading-loose">&copy; {new Date().getFullYear()} lemmikkistudio.fi / Y-tunnus: 1870949-9</p>
						
					</div>
				</div>
				
				
			</div>
		</footer>
		<CookieConsent />
	</body>
</html>