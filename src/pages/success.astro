import Layout from '../layouts/layout.astro';
import Stripe from 'stripe';
import { kv } from "@vercel/kv";

const STRIPE_SECRET_KEY = import.meta.env.STRIPE_SECRET_KEY ?? process.env.STRIPE_SECRET_KEY;
const ADMIN_SECRET = import.meta.env.ADMIN_SECRET ?? process.env.ADMIN_SECRET;

const stripe = new Stripe(STRIPE_SECRET_KEY as string);

const sessionId = Astro.url.searchParams.get('session_id');
const testMode = Astro.url.searchParams.get('test');
const testSecret = Astro.url.searchParams.get('secret');

let downloadUrl = null;
let error = null;
let couponCode: string | null = null;

// TEST MODE: Sallitaan testaus lokaalissa ja preview-ymp√§rist√∂ss√§ admin secretilla
const isPreview = import.meta.env.VERCEL_ENV === 'preview' || process.env.VERCEL_ENV === 'preview';
if (testMode === 'true' && testSecret === ADMIN_SECRET && (!import.meta.env.PROD || isPreview)) {
  downloadUrl = Astro.url.searchParams.get('image') || '/refkuva-6.webp';
  console.log('üß™ TEST MODE: Using mock image:', downloadUrl);
} 
// NORMAALI MODE: Tarkista Stripe session
else if (!sessionId) {
  return Astro.redirect('/');
}

// Stripe-validointi vain jos ei test-modessa
if (!downloadUrl && sessionId) {
  try {
    const session = await stripe.checkout.sessions.retrieve(sessionId);
    
    if (session.payment_status === 'paid') {
      // Maksu onnistui! Haetaan kuvan URL metadatasta
      downloadUrl = session.metadata?.original_image_url;
      
      // Hae alennuskoodi Redis/KV:st√§
      try {
        couponCode = await kv.get(`coupon:${sessionId}`) as string | null;
        console.log('Coupon code fetched:', couponCode);
      } catch (kvErr) {
        console.error('Failed to fetch coupon code:', kvErr);
      }
    } else {
      error = "Maksu ei ole viel√§ vahvistunut.";
    }
  } catch (e: any) {
    console.error(e);
    error = "Virhe maksun tarkistuksessa.";
  }
}
---

<Layout title="Kiitos tilauksesta! - Muotokuvat.fi">
  <main class="min-h-screen flex flex-col items-center justify-center p-4 bg-[#F2F0ED]">
    <div class="bg-white p-8 rounded-[28px] shadow-sm max-w-lg w-full text-center space-y-6 mb-12">
      
      {downloadUrl ? (
        <>
          <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
