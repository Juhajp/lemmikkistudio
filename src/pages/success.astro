              </svg>
              <span id="whatsapp-btn-text">Jaa kuva WhatsAppissa</span>
            </button>
          </div>
          
          <!-- Alennuskoodi-osio -->
          {couponCode && (
            <div class="border-t border-gray-200 pt-6 mt-6">
              <div class="bg-gradient-to-r from-violet-50 to-purple-50 p-6 rounded-2xl border-2 border-violet-200">
                <h3 class="text-lg font-semibold text-violet-900 mb-2 flex items-center gap-2">
                  <span>üéÅ</span>
                  <span>Kiitos tilauksestasi!</span>
                </h3>
                <p class="text-sm text-gray-700 mb-4">
                  T√§ss√§ alennuskoodi jolla saat seuraavan muotokuvan <strong>-50% alennuksella!</strong> Alennuskoodi sy√∂tet√§√§n kassasivulla.<br />
                  <span class="text-violet-600 font-medium">Anna kaverille tai k√§yt√§ itse!</span>
                </p>
                
                <div class="flex items-center justify-center gap-3 bg-white p-4 rounded-xl border-2 border-dashed border-violet-300 mb-3">
                  <code id="coupon-code" class="text-2xl font-bold text-violet-600 tracking-wider">
                    {couponCode}
                  </code>
                  <button 
                    id="copy-coupon-btn"
                    class="px-4 py-2 bg-violet-600 text-white text-sm rounded-lg hover:bg-violet-700 transition flex items-center gap-2"
                  >
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    <span id="copy-btn-text">Kopioi</span>
                  </button>
                </div>
                
                <p class="text-xs text-gray-500 text-center">
                  Koodi on voimassa 30 p√§iv√§√§ ja k√§ytett√§viss√§ vain kerran.
                </p>
              </div>
            </div>
          )}
          
          <!-- Harmaa viiva alapuolella -->
          <div class="border-t border-gray-200 pt-6 mt-6">
            <a href="/" class="block w-auto mx-auto px-6 py-5 bg-[#111111] text-white rounded-full font-medium hover:bg-[#555555] transition text-sm">
              Luo uusi kuva
            </a>
          </div>

          <script define:vars={{ downloadUrl }}>
            let shareUrl = null;

            // Latausnappi - iOS-spesifinen parannus
            const btn = document.getElementById('download-btn');
            if (btn) {
              btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const url = btn.getAttribute('data-download-url');
                if (!url) {
                  console.error('Download URL puuttuu');
                  alert('Kuvan URL puuttuu. Ota yhteytt√§ tukeen.');
                  return;
                }

                // Tarkista onko iOS
                const isIOS = /iPhone|iPad|iPod/i.test(navigator.userAgent);
                console.log('üîÑ Aloitetaan kuvan lataus, URL:', url, 'iOS:', isIOS);

                const originalContent = btn.innerHTML;
                btn.innerHTML = `
                  <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></div>
                  Ladataan...
                `;
                btn.style.pointerEvents = 'none';
                btn.classList.add('opacity-75');

                try {
                  if (isIOS) {
                    // iOS: K√§yt√§ Web Share API:a jos saatavilla, muuten avaa uuteen v√§lilehteen
                    console.log('üì± iOS havaittu, k√§ytet√§√§n iOS-spesifist√§ menetelm√§√§...');
                    
                    if (navigator.share && navigator.canShare) {
                      // Yrit√§ ladata kuva ja jakaa se Web Share API:lla
                      try {
                        const response = await fetch(url);
                        if (response.ok) {
                          const blob = await response.blob();
                          const file = new File([blob], 'muotokuva-pro.jpg', { type: 'image/jpeg' });
                          
                          if (navigator.canShare({ files: [file] })) {
                            await navigator.share({
                              files: [file],
                              title: 'Muotokuva Pro',
                            });
                            console.log('‚úÖ Kuva jaettu iOS Web Share API:lla');
                          } else {
                            throw new Error('Web Share API ei tue tiedostojen jakamista');
                          }
                        } else {
                          throw new Error(`HTTP ${response.status}`);
                        }
                      } catch (shareErr) {
                        console.log('Web Share API ep√§onnistui, avataan kuva uuteen v√§lilehteen:', shareErr);
                        // iOS: avaa kuva uuteen v√§lilehteen (k√§ytt√§j√§ voi tallentaa pit√§m√§ll√§ painallusta)
                        window.open(url, '_blank');
                      }
                    } else {
                      // iOS ilman Web Share API:a: avaa kuva uuteen v√§lilehteen
                      console.log('Web Share API ei saatavilla, avataan kuva uuteen v√§lilehteen');
                      window.open(url, '_blank');
                    }
                  } else {
                    // Desktop/Android: k√§yt√§ normaalia blob-downloadia
                    console.log('üì• Desktop/Android: yritet√§√§n ladata kuva fetch:ll√§...');
                    const response = await fetch(url);
                    
                    if (response.ok) {
                      console.log('‚úÖ Fetch onnistui, luodaan blob...');
                      const blob = await response.blob();
                      const blobUrl = URL.createObjectURL(blob);
                      
                      const a = document.createElement('a');
                      a.href = blobUrl;
                      a.download = 'muotokuva-pro.jpg';
                      document.body.appendChild(a);
                      a.click();
                      document.body.removeChild(a);
                      URL.revokeObjectURL(blobUrl);
                      console.log('‚úÖ Kuva ladattu onnistuneesti blob-menetelm√§ll√§');
                    } else {
                      throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                  }
                } catch (err) {
                  console.error('‚ùå Lataus ep√§onnistui:', err);
                  
                  // Fallback: avaa uuteen v√§lilehteen
                  console.log('üîÑ Avataan kuva uuteen v√§lilehteen fallback-menetelm√§ll√§...');
                  window.open(url, '_blank');
                } finally {
                  btn.innerHTML = originalContent;
                  btn.style.pointerEvents = 'auto';
                  btn.classList.remove('opacity-75');
                }
              });
            }

            // Jaa kuva WhatsAppissa -nappi
            const whatsappBtn = document.getElementById('share-whatsapp');
            const whatsappBtnText = document.getElementById('whatsapp-btn-text');
            
            if (whatsappBtn) {
              whatsappBtn.addEventListener('click', async () => {
                const originalContent = whatsappBtn.innerHTML;
                if (whatsappBtnText) whatsappBtnText.textContent = 'Luodaan linkki√§...';
                whatsappBtn.disabled = true;

                try {
                  // 1. Luo jakolinkki
                  const response = await fetch('/api/create-share-link', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ imageUrl: downloadUrl }),
                  });

                  // Tarkista ett√§ vastaus on JSON
                  const contentType = response.headers.get('content-type');
                  if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('API palautti HTML:√§√§ (404/500):', text.substring(0, 200));
                    console.error('Response status:', response.status);
                    console.error('Response URL:', response.url);
                    throw new Error(`API-endpoint ei l√∂ydy tai palauttaa virhesivun (${response.status}). K√§ynnist√§ dev-server uudelleen.`);
                  }

                  const data = await response.json();
                  
                  console.log('Share link response:', response.status, data);

                  if (response.ok && data.shareUrl) {
                    // 2. Avaa suoraan WhatsApp URL-skeema (kaikissa laitteissa)
                    // iOS:ssa navigator.share avaa aina jakodialogin, joten k√§yt√§mme suoraan WhatsApp URL:ia
                    const shareText = `Katso AI-muotokuvani! üé®\n${data.shareUrl}\n\nTein t√§m√§n Muotokuvasi.fi -palvelussa`;
                    const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(shareText)}`;
                    
                    // Tarkista onko mobiili
                    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
                    
                    if (isMobile) {
                      // Mobiilissa: k√§ytet√§√§n window.location.href pienen viiveen kanssa
                      // Viive antaa WhatsAppille aikaa parsia linkin ennen navigointia
                      setTimeout(() => {
                        window.location.href = whatsappUrl;
                      }, 100);
                    } else {
                      // Desktopissa: k√§ytet√§√§n window.open() _blank-parametrilla
                      window.open(whatsappUrl, '_blank');
                      // Palauta nappi desktopissa
                      whatsappBtn.innerHTML = originalContent;
                      whatsappBtn.disabled = false;
                    }
                  } else {
                    const errorMsg = data.error || 'Jakolinkin luonti ep√§onnistui';
                    console.error('Share link error:', data);
                    alert(`${errorMsg}${data.details ? '\n\n' + data.details : ''}`);
                    whatsappBtn.innerHTML = originalContent;
                    whatsappBtn.disabled = false;
                  }
                } catch (error) {
                  console.error('Error creating share link:', error);
                  const errorMessage = error.message || 'Tuntematon virhe';
                  alert(`Jakolinkin luonti ep√§onnistui: ${errorMessage}`);
                  whatsappBtn.innerHTML = originalContent;
                  whatsappBtn.disabled = false;
                }
              });
            }

            // Alennuskoodin kopiointi
            const copyCouponBtn = document.getElementById('copy-coupon-btn');
            const copyBtnText = document.getElementById('copy-btn-text');
            const couponCodeEl = document.getElementById('coupon-code');
            
            if (copyCouponBtn && couponCodeEl) {
              copyCouponBtn.addEventListener('click', async () => {
                const code = couponCodeEl.textContent?.trim();
                if (!code) return;
                
                try {
                  await navigator.clipboard.writeText(code);
                  if (copyBtnText) {
                    copyBtnText.textContent = '‚úì Kopioitu!';
                    copyCouponBtn.classList.add('bg-green-600', 'hover:bg-green-700');
                    copyCouponBtn.classList.remove('bg-violet-600', 'hover:bg-violet-700');
                    
                    setTimeout(() => {
                      copyBtnText.textContent = 'Kopioi';
                      copyCouponBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
                      copyCouponBtn.classList.add('bg-violet-600', 'hover:bg-violet-700');
                    }, 2000);
                  }
                } catch (err) {
                  console.error('Copy failed:', err);
                  alert('Kopiointi ep√§onnistui. Kopioi koodi manuaalisesti.');
                }
              });
            }

          </script>

          <!-- Meta Pixel Purchase Conversion Event -->
          <script is:inline>
            // Odota ett√§ Meta Pixel latautuu, sitten laukaise Purchase-tapahtuma
            function waitForFbq(callback, maxWait = 5000) {
              const startTime = Date.now();
              
              const check = () => {
                if (typeof fbq !== 'undefined') {
                  callback();
                } else if (Date.now() - startTime < maxWait) {
                  setTimeout(check, 100);
                } else {
                  console.warn('‚ö†Ô∏è Meta Pixel ei latautunut 5 sekunnissa - Purchase event not tracked');
                }
              };
              
              check();
            }

            // Laukaise Purchase-tapahtuma kun fbq on valmis
            waitForFbq(() => {
              fbq('track', 'Purchase', {
                value: 3.90,
                currency: 'EUR',
                content_name: 'Muotokuvasi.fi Tilaus'
              });
              console.log('‚úÖ Meta Pixel Purchase event fired: 3.90 EUR');
            });
          </script>
        </>
      ) : (
        <>
          <div class="w-16 h-16 bg-red-100 text-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900">Jotain meni pieleen</h1>
          <p class="text-gray-600">{error || "Emme voineet vahvistaa maksua."}</p>
          <a href="/" class="block mt-6 text-violet-600 font-medium hover:underline">
            Palaa etusivulle
          </a>
        </>
      )}

    </div>
  </main>
</Layout>
