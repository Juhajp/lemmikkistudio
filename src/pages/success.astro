---
import Layout from '../layouts/layout.astro';
import Stripe from 'stripe';

const STRIPE_SECRET_KEY = import.meta.env.STRIPE_SECRET_KEY ?? process.env.STRIPE_SECRET_KEY;
const ADMIN_SECRET = import.meta.env.ADMIN_SECRET ?? process.env.ADMIN_SECRET;

const stripe = new Stripe(STRIPE_SECRET_KEY as string);

const sessionId = Astro.url.searchParams.get('session_id');
const testMode = Astro.url.searchParams.get('test');
const testSecret = Astro.url.searchParams.get('secret');

let downloadUrl = null;
let error = null;

// TEST MODE: Sallitaan testaus lokaalissa ja preview-ymp√§rist√∂ss√§ admin secretilla
const isPreview = import.meta.env.VERCEL_ENV === 'preview' || process.env.VERCEL_ENV === 'preview';
if (testMode === 'true' && testSecret === ADMIN_SECRET && (!import.meta.env.PROD || isPreview)) {
  downloadUrl = Astro.url.searchParams.get('image') || '/refkuva-1.webp';
  console.log('üß™ TEST MODE: Using mock image:', downloadUrl);
} 
// NORMAALI MODE: Tarkista Stripe session
else if (!sessionId) {
  return Astro.redirect('/');
}

// Stripe-validointi vain jos ei test-modessa
if (!downloadUrl && sessionId) {
  try {
    const session = await stripe.checkout.sessions.retrieve(sessionId);
    
    if (session.payment_status === 'paid') {
      // Maksu onnistui! Haetaan kuvan URL metadatasta
      downloadUrl = session.metadata?.original_image_url;
    } else {
      error = "Maksu ei ole viel√§ vahvistunut.";
    }
  } catch (e: any) {
    console.error(e);
    error = "Virhe maksun tarkistuksessa.";
  }
}
---

<Layout title="Kiitos tilauksesta! - Muotokuvat.fi">
  <main class="min-h-screen flex flex-col items-center justify-center p-4 bg-[#F2F0ED]">
    <div class="bg-white p-8 rounded-[28px] shadow-sm max-w-lg w-full text-center space-y-6 mb-12">
      
      {downloadUrl ? (
        <>
          <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          
          <h1 class="text-2xl font-bold text-gray-900">Kiitos tilauksesta!</h1>
          <p class="text-gray-600">Maksusi on vastaanotettu onnistuneesti. T√§ss√§ on valmis muotokuvasi.</p>
          
          <div class="rounded-xl overflow-hidden shadow-lg border-4 border-white my-6">
            <img src={downloadUrl} alt="Ostettu kuva" class="w-full h-auto" />
          </div>

          <a 
            href={downloadUrl} 
            data-download-url={downloadUrl}
            id="download-btn"
            class="block w-full py-4 bg-violet-600 text-white text-center rounded-full font-medium hover:bg-violet-700 transition shadow-md hover:shadow-lg flex items-center justify-center gap-2 cursor-pointer"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Lataa alkuper√§inen kuva
          </a>

          <!-- JAKO-OSIO -->
          <div class="border-t border-gray-200 pt-6 mt-6 space-y-4">
            <h3 class="text-lg font-semibold text-gray-900">Jaa kaverille üéâ</h3>
            <p class="text-xs text-gray-500">Linkki toimii 7 p√§iv√§√§. (kuva s√§ilytet√§√§n 7 p√§iv√§√§ palvelimella)</p>
            
            <!-- Jaa kuva WhatsAppissa -nappi -->
            <button
              id="share-whatsapp"
              class="w-auto max-w-xs mx-auto px-6 py-3 bg-[#25D366] text-white rounded-full font-medium hover:bg-[#20BA5A] transition flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
              <span id="whatsapp-btn-text">Jaa kuva WhatsAppissa</span>
            </button>
          </div>
          
          <!-- Harmaa viiva WhatsApp-painikkeen alapuolella -->
          <div class="border-t border-gray-200 pt-6 mt-6">
            <a href="/" class="block w-auto mx-auto px-6 py-5 bg-[#111111] text-white rounded-full font-medium hover:bg-[#555555] transition text-sm">
              Luo uusi kuva
            </a>
          </div>

          <script define:vars={{ downloadUrl }}>
            let shareUrl = null;

            // Latausnappi
            const btn = document.getElementById('download-btn');
            if (btn) {
              btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const url = btn.getAttribute('data-download-url');
                if (!url) return;

                const originalContent = btn.innerHTML;
                btn.innerHTML = `
                  <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></div>
                  Ladataan...
                `;
                btn.style.pointerEvents = 'none';
                btn.classList.add('opacity-75');

                try {
                  const response = await fetch(url);
                  const blob = await response.blob();
                  const blobUrl = URL.createObjectURL(blob);
                  
                  const a = document.createElement('a');
                  a.href = blobUrl;
                  a.download = 'muotokuva-pro.jpg';
                  document.body.appendChild(a);
                  a.click();
                  document.body.removeChild(a);
                  URL.revokeObjectURL(blobUrl);
                } catch (err) {
                  console.error('Lataus ep√§onnistui, avataan uuteen v√§lilehteen', err);
                  window.open(url, '_blank');
                } finally {
                  btn.innerHTML = originalContent;
                  btn.style.pointerEvents = 'auto';
                  btn.classList.remove('opacity-75');
                }
              });
            }

            // Jaa kuva WhatsAppissa -nappi
            const whatsappBtn = document.getElementById('share-whatsapp');
            const whatsappBtnText = document.getElementById('whatsapp-btn-text');
            
            if (whatsappBtn) {
              whatsappBtn.addEventListener('click', async () => {
                const originalContent = whatsappBtn.innerHTML;
                if (whatsappBtnText) whatsappBtnText.textContent = 'Luodaan linkki√§...';
                whatsappBtn.disabled = true;

                try {
                  // 1. Luo jakolinkki
                  const response = await fetch('/api/create-share-link', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ imageUrl: downloadUrl }),
                  });

                  // Tarkista ett√§ vastaus on JSON
                  const contentType = response.headers.get('content-type');
                  if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('API palautti HTML:√§√§ (404/500):', text.substring(0, 200));
                    console.error('Response status:', response.status);
                    console.error('Response URL:', response.url);
                    throw new Error(`API-endpoint ei l√∂ydy tai palauttaa virhesivun (${response.status}). K√§ynnist√§ dev-server uudelleen.`);
                  }

                  const data = await response.json();
                  
                  console.log('Share link response:', response.status, data);

                  if (response.ok && data.shareUrl) {
                    // 2. Avaa suoraan WhatsApp URL-skeema (kaikissa laitteissa)
                    // iOS:ssa navigator.share avaa aina jakodialogin, joten k√§yt√§mme suoraan WhatsApp URL:ia
                    const shareText = `Katso AI-muotokuvani! üé®\n${data.shareUrl}\n\nTein t√§m√§n Muotokuvasi.fi -palvelussa`;
                    const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(shareText)}`;
                    
                    // Tarkista onko mobiili
                    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
                    
                    if (isMobile) {
                      // Mobiilissa: k√§ytet√§√§n window.location.href pienen viiveen kanssa
                      // Viive antaa WhatsAppille aikaa parsia linkin ennen navigointia
                      setTimeout(() => {
                        window.location.href = whatsappUrl;
                      }, 100);
                    } else {
                      // Desktopissa: k√§ytet√§√§n window.open() _blank-parametrilla
                      window.open(whatsappUrl, '_blank');
                      // Palauta nappi desktopissa
                      whatsappBtn.innerHTML = originalContent;
                      whatsappBtn.disabled = false;
                    }
                  } else {
                    const errorMsg = data.error || 'Jakolinkin luonti ep√§onnistui';
                    console.error('Share link error:', data);
                    alert(`${errorMsg}${data.details ? '\n\n' + data.details : ''}`);
                    whatsappBtn.innerHTML = originalContent;
                    whatsappBtn.disabled = false;
                  }
                } catch (error) {
                  console.error('Error creating share link:', error);
                  const errorMessage = error.message || 'Tuntematon virhe';
                  alert(`Jakolinkin luonti ep√§onnistui: ${errorMessage}`);
                  whatsappBtn.innerHTML = originalContent;
                  whatsappBtn.disabled = false;
                }
              });
            }

          </script>
        </>
      ) : (
        <>
          <div class="w-16 h-16 bg-red-100 text-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900">Jotain meni pieleen</h1>
          <p class="text-gray-600">{error || "Emme voineet vahvistaa maksua."}</p>
          <a href="/" class="block mt-6 text-violet-600 font-medium hover:underline">
            Palaa etusivulle
          </a>
        </>
      )}

    </div>
  </main>
</Layout>
