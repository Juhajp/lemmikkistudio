---
import Layout from '../layouts/Layout.astro';
import PortraitGenerator from '../components/PortraitGenerator';
---

<Layout title="Muotokuvat.fi">
	<main class="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-4">
		<h1 class="text-4xl font-extrabold text-gray-900 mb-2">muotokuvat.fi</h1>
		<p class="text-gray-600 mb-8">Muuta kuvasi taiteeksi sekunneissa.</p>
		
		<PortraitGenerator client:load />
		
		<p class="mt-8 text-xs text-gray-400">
			Emme tallenna kuviasi. Kaikki käsittely on väliaikaista.
		</p>
	</main>
</Layout>